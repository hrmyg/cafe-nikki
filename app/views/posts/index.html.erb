<div class='post-contents'>
  <h2 class='title'>カフェ日記</h2>
    <ul class='post-lists'>
      <% @posts.each do |item| %>
      <li class='list'>
        <%= link_to '#' do %>
        <div class='item-img-content'>
          <%= image_tag post.image, class: "item-img" %>
        </div>
        <div class='post-info'>
          <h3 class='post-name'>
            <%= post.name %>
          </h3>
          <div class='post-text'>
            <%= post.text %>
          </div>
          <div class='post-purpose'>
            <span><%= item.purpose.name %></span>
          </div>
        </div>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
</div>